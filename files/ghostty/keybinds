# Pane MGMT
  keybind = super+d=unbind
  keybind = super+shift+d=unbind
  keybind = super+[=unbind
  keybind = super+]=unbind
  keybind = super+shift+enter=unbind

  keybind = alt+z=toggle_split_zoom
  keybind = alt+space>alt+h=new_split:left
  keybind = alt+space>alt+l=new_split:right
  keybind = alt+space>alt+k=new_split:up
  keybind = alt+space>alt+j=new_split:down
  keybind = alt+h=goto_split:left
  keybind = alt+l=goto_split:right
  keybind = alt+k=goto_split:up
  keybind = alt+j=goto_split:down

  keybind = super+alt+arrow_up=goto_split:up
  keybind = super+alt+arrow_down=goto_split:down
  keybind = super+alt+arrow_left=goto_split:left
  keybind = super+alt+arrow_right=goto_split:right

  keybind = super+ctrl+arrow_up=resize_split:up,50
  keybind = super+ctrl+arrow_down=resize_split:down,50
  keybind = super+ctrl+arrow_left=resize_split:left,50
  keybind = super+ctrl+arrow_right=resize_split:right,50
  keybind = super+ctrl+==equalize_splits


# Tab MGMT
  keybind = alt+space>alt+n=new_tab
  keybind = alt+shift+h=previous_tab
  keybind = alt+shift+l=next_tab
  keybind = alt+shift+[=move_tab:-1
  keybind = alt+shift+]=move_tab:1

# Scrolling
  keybind = alt+ctrl+k=scroll_page_fractional:-0.25
  keybind = alt+ctrl+j=scroll_page_fractional:0.25
  keybind = alt+ctrl+o=write_scrollback_file:paste

